#ifndef IGRIS_STD_EXCEPTION_H
#define IGRIS_STD_EXCEPTION_H
#include "igris_std_namespace.h"

#include <string>

namespace igris_std
{
    class exception
    {
    public:
        exception(const igris_std::string &msg) : m_msg(msg)
        {
            m_msg.c_str();
        }

        const char *what() const
        {
            return m_msg.c_str();
        }

    private:
        igris_std::string m_msg;
    };

    bool uncaught_exception();
}

#endif
