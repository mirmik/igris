#ifndef IGRIS_STD_EXCEPTION_H
#define IGRIS_STD_EXCEPTION_H

namespace std
{
    class exception
    {
    public:
        exception(const char *msg) : m_msg(msg) {}
        const char *what() const
        {
            return m_msg;
        }

    private:
        const char *m_msg;
    };
}

#endif