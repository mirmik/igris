#ifndef IGRIS_STD_ISTREAM_H
#define IGRIS_STD_ISTREAM_H
#include "igris_std_namespace.h"

#include <ios>
#include <string>

namespace igris_std
{

    template <class CharT, class Traits> class basic_istream
    {
    public:
        operator bool() const
        {
            return false;
        }
        virtual ~basic_istream() = default;
    };

    using istream = basic_istream<char, char_traits<char>>;

    template <class CharT, class Traits>
    igris_std::basic_istream<CharT, Traits> &
    getline(igris_std::basic_istream<CharT, Traits> &input, igris_std::string &str)
    {
        (void)str;
        // str.clear();
        return input;
    }

    template <class CharT, class Traits>
    igris_std::basic_istream<CharT, Traits> &
    operator>>(igris_std::basic_istream<CharT, Traits> &input, igris_std::string &str)
    {
        (void)str;
        // str.clear();
        return input;
    }
}

#endif
