#ifndef IGRIS_STD_MAP_H
#define IGRIS_STD_MAP_H
#include "igris_std_namespace.h"

#include <functional>
#include <igris/container/flat_map.h>
#include <memory>

namespace igris_std
{
    template <typename K,
              typename V,
              class Compare = igris_std::less<K>,
              class Allocator = igris_std::allocator<igris_std::pair<K, V>>>
    class map : public igris::flat_map<K, V>
    {
    public:
        map(igris_std::initializer_list<igris_std::pair<K, V>> init)
            : igris::flat_map<K, V>(init)
        {
        }

        map() = default;
    };
}

#endif
