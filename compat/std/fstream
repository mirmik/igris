#ifndef IGRIS_STD_FSTREAM_H
#define IGRIS_STD_FSTREAM_H
#include "igris_std_namespace.h"

#include <ios>
#include <istream>
#include <ostream>

namespace igris_std
{
    class fstream : virtual public istream, virtual public ostream

    {
        int _dummy;

    public:
        fstream() {}
        fstream(igris_std::string) {}
        fstream(igris_std::string, int) {}

        ~fstream() {}
        operator bool()
        {
            return true;
        }

        void open(igris_std::string) {}
        void open(igris_std::string, int) {}

        bool is_open()
        {
            return false;
        }

        void close() {}
    };

    class ifstream : virtual public fstream
    {
    public:
        ifstream() {}
        ifstream(igris_std::string) {}
        ifstream(igris_std::string, int) {}

        bool fail()
        {
            return false;
        }

        bool good()
        {
            return false;
        }

        bool eof()
        {
            return false;
        }

        int read(char *buf, int sz)
        {
            (void)buf;
            (void)sz;
            return 0;
        }

        int gcount()
        {
            return 0;
        }
    };
}

#endif
