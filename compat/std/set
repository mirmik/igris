#ifndef IGRIS_STD_SET_H
#define IGRIS_STD_SET_H
#include "igris_std_namespace.h"

#include <igris/container/flat_set.h>
#include <memory>

namespace igris_std
{
    template <class Key,
              class Compare = igris_std::less<Key>,
              class Allocator = igris_std::allocator<Key>>
    class set : public igris::flat_set<Key, Compare, Allocator>
    {
    public:
        using key_type = Key;
        using value_type = Key;
        using key_compare = Compare;
        using value_compare = Compare;
        using allocator_type = Allocator;
        using reference = value_type &;
        using const_reference = const value_type &;
        using pointer = typename igris_std::allocator_traits<Allocator>::pointer;
        using const_pointer =
            typename igris_std::allocator_traits<Allocator>::const_pointer;
        using iterator = pointer;
        using const_iterator = const_pointer;
        using reverse_iterator = pointer;
        using const_reverse_iterator = const_pointer;
        using difference_type = igris_std::ptrdiff_t;
    };
}

#endif
