#ifndef IGRIS_STD_RATIO_H
#define IGRIS_STD_RATIO_H
#include "igris_std_namespace.h"

#include <cstdint>

namespace igris_std
{
    template <igris_std::intmax_t Num, igris_std::intmax_t Denom = 1> class ratio
    {
    public:
        static constexpr igris_std::intmax_t num = Num;
        static constexpr igris_std::intmax_t den = Denom;
    };

    using atto = igris_std::ratio<1, 1000000000000000000>;
    using femto = igris_std::ratio<1, 1000000000000000>;
    using pico = igris_std::ratio<1, 1000000000000>;
    using nano = igris_std::ratio<1, 1000000000>;
    using micro = igris_std::ratio<1, 1000000>;
    using milli = igris_std::ratio<1, 1000>;
    using centi = igris_std::ratio<1, 100>;
    using deci = igris_std::ratio<1, 10>;
    using deca = igris_std::ratio<10, 1>;
    using hecto = igris_std::ratio<100, 1>;
    using kilo = igris_std::ratio<1000, 1>;
    using mega = igris_std::ratio<1000000, 1>;
    using giga = igris_std::ratio<1000000000, 1>;
    using tera = igris_std::ratio<1000000000000, 1>;
    using peta = igris_std::ratio<1000000000000000, 1>;
    using exa = igris_std::ratio<1000000000000000000, 1>;

    template <class R1, class R2> struct ratio_add
    {
        using type = igris_std::ratio<R1::num * R2::den + R2::num * R1::den,
                                R1::den * R2::den>;
    };

    template <class R1, class R2> struct ratio_subtract
    {
        using type = igris_std::ratio<R1::num * R2::den - R2::num * R1::den,
                                R1::den * R2::den>;
    };

    template <class R1, class R2> struct ratio_multiply
    {
        using type = igris_std::ratio<R1::num * R2::num, R1::den * R2::den>;
    };

    template <class R1, class R2> struct ratio_divide
    {
        using type = igris_std::ratio<R1::num * R2::den, R1::den * R2::num>;
    };
}

#endif
