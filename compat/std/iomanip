#ifndef IGRIS_STD_IOMANIP_H
#define IGRIS_STD_IOMANIP_H

namespace std
{
    class setprecision
    {
        int precision;

    public:
        setprecision(int precision) : precision(precision) {}
    };

    class fixed_cls
    {
    public:
        fixed_cls() {}
    } fixed;

    class resetiosflags
    {
        int flags;

    public:
        resetiosflags(int flags) : flags(flags) {}
    };

    class setiosflags
    {
        int flags;

    public:
        setiosflags(int flags) : flags(flags) {}
    };

    class setbase
    {
        int base;

    public:
        setbase(int base) : base(base) {}
    };

    class setfill
    {
        char fill;

    public:
        setfill(char fill) : fill(fill) {}
    };

    class setw
    {
        int width;

    public:
        setw(int width) : width(width) {}
    };

    class hex_cls
    {
    public:
        hex_cls() {}
    } hex;
}

#endif