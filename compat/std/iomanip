#ifndef IGRIS_STD_IOMANIP_H
#define IGRIS_STD_IOMANIP_H

namespace std
{
    class setprecision
    {
        int precision;

    public:
        setprecision(int precision) : precision(precision) {}
    };

    class fixed_cls
    {
    public:
        fixed_cls() {}
    };

    class resetiosflags
    {
        int flags;

    public:
        resetiosflags(int flags) : flags(flags) {}
    };

    class setiosflags
    {
        int flags;

    public:
        setiosflags(int flags) : flags(flags) {}
    };

    class setbase
    {
        int base;

    public:
        setbase(int base) : base(base) {}
    };

    class setfill
    {
        char fill;

    public:
        setfill(char fill) : fill(fill) {}
    };

    class setw
    {
        int width;

    public:
        setw(int width) : width(width) {}
    };

    class hex_cls
    {
    public:
        hex_cls() {}
    };

    class dec_cls
    {
    public:
        dec_cls() {}
    };

    class oct_cls
    {
    public:
        oct_cls() {}
    };

    class left_cls
    {
    public:
        left_cls() {}
    };

    class right_cls
    {
    public:
        right_cls() {}
    };

    class internal_cls
    {
    public:
        internal_cls() {}
    };

    const hex_cls hex;
    const dec_cls dec;
    const oct_cls oct;
    const left_cls left;
    const right_cls right;
    const internal_cls internal;
    const fixed_cls fixed;
}

#endif