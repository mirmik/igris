#ifndef IGRIS_COMPAT_STD_CSTRING_H
#define IGRIS_COMPAT_STD_CSTRING_H
#include "igris_std_config.hpp"

#include <string.h>

namespace IGRIS_STD_NS
{
    // String manipulation
    using ::strcpy;
    using ::strncpy;
    using ::strcat;
    using ::strncat;

    // String examination
    using ::strlen;
    using ::strcmp;
    using ::strncmp;
    using ::strchr;
    using ::strrchr;
    using ::strspn;
    using ::strcspn;
    using ::strpbrk;
    using ::strstr;
    using ::strtok;

    // Memory manipulation
    using ::memcpy;
    using ::memmove;
    using ::memset;
    using ::memcmp;
    using ::memchr;

    // Misc
    using ::strerror;

    // Non-standard but commonly available
#ifdef _GNU_SOURCE
    using ::strdup;
    using ::strtok_r;
#endif
}

#endif
