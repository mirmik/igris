#ifndef IGRIS_STD_THREAD_H
#define IGRIS_STD_THREAD_H
#include "igris_std_namespace.h"

#include <chrono>

namespace igris_std
{
    class thread
    {
        int _dummy;

    public:
        thread() {}
        template <typename T> thread(T) {}
        void join() {}
    };

    class this_thread
    {
    public:
        static void yield() {}

        static void sleep_for(igris_std::chrono::milliseconds) {}
    };
}

#endif
